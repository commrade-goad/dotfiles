# IDLE CONFIG 
 exec swayidle -w \
 	  before-sleep 'playerctl pause'\
	  before-sleep '$screenlock'\
          timeout 300 '$screenlock' \
          timeout 360 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	  timeout 420 'systemctl suspend'

