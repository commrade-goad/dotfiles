# VARIABLES
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu rofi_path | rofi -show drun -show-icons | xargs swaymsg exec --

# STARTUP
exec ~/.config/sway/script/goad-rust-batt-reminder
exec /usr/bin/autotiling
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec copyq
## set default terminal
exec export TERM=alacritty
exec export TERMINAL=alacritty

# LOCK SCREEN VAR
set $screenlockbg /tmp/screenlockbg.png
set $screenlock grim -s 0.1 $screenlockbg && swaylock -f -i $screenlockbg -s fill

# CLIPBOARD
bindsym $mod+Shift+v exec copyq toggle

# EMOJI SELECTOR
bindsym $mod+Shift+u exec ~/.config/sway/script/emoji.sh
# u for how useless this feature is :kek:

# Numlock settings
input * xkb_numlock enable

# WALLPAPER
output * bg ~/Pictures/Random/Wallpaper/snow-forest/1.jpg fill

# HDMI DEFAULT SETTINGS
output HDMI-A-1 resolution 1920x1080 position 1920,0

# DISPLAY STUFF
## Turn on adaptive sync
#output * adaptive_sync on

## If wine app has a problem
#exec_always xrandr --output $(xrandr | grep -m 1 XWAYLAND | awk '{print $1;}') --primary
# You can get the names of your outputs by running: swaymsg -t get_outputs

# IDLE CONFIG 
 exec swayidle -w \
 	  before-sleep 'playerctl pause'\
	  before-sleep '$screenlock'\
          timeout 120 '$screenlock' \
          timeout 200 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	  timeout 240 'systemctl suspend'

# INPUT DEVICE CONFIG

   input <identifier> repeat_delay 300
   input <identifier> repeat_rate 30

   input "1739:52545:SYNA7DB5:01_06CB:CD41_Touchpad" {
       dwt disable
       tap enabled
       natural_scroll enabled
       middle_emulation enabled
       pointer_accel 0.05
   }

   input "10077:2982:USB_OPTICAL_MOUSE" {
   	dwt enabled
	accel_profile "flat"
   }

