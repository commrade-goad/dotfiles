*{
    /* `otf-font-awesome` is required to be installed for icons */
    font-family:JetBrainsMono Nerd Font Mono, MesloLGS Nerd Font Mono, Noto Sans Mono CJK JP, Noto Sans Mono CJK HK, Noto Sans Mono CJK KR, Noto Sans Mono CJK SC, Noto Sans Mono CJK TC;
    font-size: 14px;
    /* border-radius: 7px 7px 7px 7px */
}

/* import mocha.css */
@import "mocha.css";


window#waybar {
    font-weight: bold;
    background-color: @base;
    border: transparent;
    color: @text;
    transition-property: background-color;
    transition-duration: .5s;
    border-radius: 0;
}

window#waybar.hidden {
    opacity: 0.2;
}

/*
window#waybar.empty {
    background-color: transparent;
}
window#waybar.solo {
    background-color: #FFFFFF;
}
*/

window#waybar.termite {
    background-color: #3F3F3F;
}

window#waybar.chromium {
    background-color: #000000;
    border: none;
}

#wlr-workspaces button {
    padding: 0;
    padding-bottom: 0;
    padding-top: 0;
    background-color: transparent;
    color: @text;
    /* Use box-shadow instead of border so the text isn't offset */
    box-shadow: inset 0 -2px transparent;
    /* Avoid rounded borders under each workspace name */
    border: none;
    border-radius: 0;
    font-size: 5px;
    margin: 0 0;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
#wlr-workspaces button:hover {
    color: @sapphire;
    background-color: rgba(0,0,0,0.2);
}

#wlr-workspaces button.focused {
    color: @blue;
    font-weight: bold;
    padding: 0 2;
    background-color: rgba(0,0,0,0.3);
}

#wlr-workspaces button.urgent {
    background-color: @red;
    color: @base;
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#tray,
#idle_inhibitor,
#custom-media,
#custom-dunst,
#mpd {
    padding: 0 10px;
    color: #FFFFFF;
    margin: 0px 1px;
    border-radius: 0px;
}

#mode {
    font-weight: normal;
    color: @sapphire;
    padding-right: 7;
    padding-left: 7;
    margin: 2px;
    border-radius: 16;
    border: 1px solid @sapphire;
}

#wlr-window{
    color: @text;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

#custom-media{
    font-weight: normal;
    color: @lavender;
    margin: 3 2;
    border-radius: 16;
    border: 1px solid @lavender;
}

#custom-start{
    font-weight: normal;
    color:@text;
    padding-left: 5;
}

#custom-separator{
    padding-right: 2;
    padding-left: 2;
}

#custom-weather{
    padding-left: 8;
    padding-right: 8;
}

#custom-dunst{
   color: @text;
}

#custom-dunst.enabled{
   color: @teal;
}

#custom-dunst.disabled{
   color: @red;
   box-shadow: inset 0 -2px @red;
   margin: 4 1;
}

#clock {
    font-weight: bold;
    color: @blue;
    background-color: transparent;
}

#battery {
    font-weight: normal;
    color: @mauve;
    background-color: transparent;
    box-shadow: inset 0 -2px transparent;
    border-radius: 0;
}

#battery.charging, #battery.plugged {
    color: @sapphire;
}

@keyframes blink {
    to {
        background-color: transparent;
	box-shadow: inset 0 -2px transparent;
    }
}

#battery.critical:not(.charging) {
    margin: 4 0;
    border-radius: 16px;
    background-color: @red;
    color: #FFFFFF;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

label:focus {
    background-color: #000000;
}

#cpu {
    background-color: @blue;
    color: #333333;
}

#memory {
    background-color: transparent;
    color: #FFFFFF;
}

#disk {
    background-color: #964B00;
}

#backlight {
    background-color: @blue;
}

#network {
    font-weight: bold;
    background-color: transparent;
    box-shadow: inset 0 -2px transparent;
    color: @peach;
}

#network.disconnected {
    background-color: transparent;
    color: @maroon;
}

#pulseaudio {
    font-weight: normal;
    color: @yellow;
    background-color: transparent;
    box-shadow: inset 0 -2px transparent;
}

#pulseaudio.muted {
    background-color: transparent;
    color: @maroon;
}
#temperature {
    background-color: #f0932b;
}

#temperature.critical {
    background-color: #eb4d4b;
}

#tray {
    background-color: transparent;
    box-shadow: inset 0 -2px transparent;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: rgba(0,0,0,0.3);
    box-shadow: inset 0 -2px #f53c3c;
}

#idle_inhibitor {
    background-color: transparent;
    color: @green
}

#idle_inhibitor.activated {
    color: @red;
    box-shadow: inset 0 -2px @red;
    margin: 4 1;
}

#language {
    background: #00b093;
    color: #740864;
    padding: 0 5px;
    margin: 0 5px;
    min-width: 16px;
}

#keyboard-state {
    font-weight: bold;
    color: @text;
    background: transparent;
    padding: 0 0px;
    min-width: 16px;
    box-shadow: inset 0 -2px transparent;
    margin-left: 1px;
    margin-right: 1px;
}

#keyboard-state > label {
    padding: 0 5px;
}

#keyboard-state > label.numlock{
    color:@yellow;
    margin-left: 2px;
}

#keyboard-state > label.capslock{
    color: @green;
    margin-right: 2px;
}

#keyboard-state > label.numlock.locked{
    color: @maroon;
}

#keyboard-state > label.capslock.locked{
    color: @red;
}

